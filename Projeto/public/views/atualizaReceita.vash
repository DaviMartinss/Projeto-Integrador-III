      <div class="app-wrapper">
         <div class="app-content pt-3 p-md-3 p-lg-4">
            <div class="container-xl">
               <h1 class="app-page-title">Atualizar Receita</h1>
               <div class="col-12 col-lg-6">
                  <div class="app-card app-card-account shadow-sm d-flex flex-column align-items-start">
                     <div class="app-card-header p-3 border-bottom-0">
                        <div class="row align-items-center gx-3">
                           <div class="col-auto">
                              <div class="app-icon-holder">
                                 <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-credit-card" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v1h14V4a1 1 0 0 0-1-1H2zm13 4H1v5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V7z"/>
                                    <path d="M2 10a1 1 0 0 1 1-1h1a1 1 0 0 1 1 1v1a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1v-1z"/>
                                 </svg>
                              </div>
                              <!--//icon-holder-->
                           </div>
                           <!--//col-->
                           <div class="col-auto">
                              <h4 class="app-card-title">Dados da Receita</h4>
                           </div>
                           <!--//col-->
                        </div>
                        <!--//row-->
                     </div>
                     <!--//app-card-header-->
                     <div class="app-card-body px-4 w-100">

                       <form action="/receitaUP" method="post">

                         <input type="number" name="ReceitaId" value="@model.receita.ReceitaId" hidden/>

                       <div class="item border-bottom py-3">
                         <div class="row justify-content-between align-items-center">
                           <div class="col-auto">
                             <div class="item-label">
                               <i class="fab fa-cc-visa me-2"></i
                                 ><strong>Data</strong>
                               </div>
                             </div>
                             <!--//col-->
                           </div>
                           <!--//row-->
                           <div class="col text-end">

                             @{
                               data = model.receita.Data.getFullYear() + "-" +
                                     (model.receita.Data.getMonth()+1).toString().padStart(2, '0') + "-" +
                                     (model.receita.Data.getDate()).toString().padStart(2, '0');

                             <input
                             name="Data"
                             type="date"
                             value="@data"
                             class="form-control"
                             id="data"
                             />

                             }
                           </div>
                           <!--//col-->
                         </div>
                         <!--//item-->

                         <div class="item border-bottom py-3">
                           <div class="row justify-content-between align-items-center">
                             <div class="col-auto">
                               <div class="item-label">
                                 <i class="fab me-2"></i><strong>Forma de Alocação</strong>
                               </div>
                             </div>
                             <!--//col-->
                           </div>
                           <!--//row-->

                           <div class="col text-end">
                             <input
                             name="FormaAlocacao"
                             type="text"
                             value="@model.receita.FormaAlocacao"
                             id="FormaLocacao"
                             class="form-control"
                             placeholder="Forma de Locação"
                             />
                           </div>
                           <!--//col-->
                         </div>
                         <!--//item-->

                         <div class="item border-bottom py-3">
                           <div class="row justify-content-between align-items-center">
                             <div class="col-auto">
                               <div class="item-label">
                                 <i class="fab me-2"></i><strong>Valor</strong>
                               </div>
                             </div>
                             <!--//col-->
                           </div>
                           <!--//row-->

                           <div class="col text-end">
                             <input
                             type="number"
                             id="Valor"
                             name="Valor"
                             value="@model.receita.Valor"
                             class="form-control"
                             placeholder="Valor"
                             />
                           </div>
                           <!--//col-->
                         </div>
                         <!--//item-->

                         <div class="item border-bottom py-3">
                           <div class="row justify-content-between align-items-center">
                             <div class="col-auto">
                               <div class="item-label">
                                 <i class="fab me-2"></i><strong>Se Repete</strong>
                               </div>
                             </div>
                             <!--//col-->
                           </div>
                           <!--//row-->
                           <div class="col text-end">

                             @if(model.receita.SeRepete != false)
                             {
                               <input type="checkbox" id="Se Repete" name="SeRepete" style="min-width: 20px; min-height: 20px;" checked/> <br>
                             }
                             else
                             {
                               <input type="checkbox" id="Se Repete" name="SeRepete" style="min-width: 20px; min-height: 20px;"/> <br>
                             }
                           </div>
                           <!--//col-->
                         </div>
                         <!--//item-->

                         <div class="item border-bottom py-3">
                           <div class="row justify-content-between align-items-center">
                             <div class="col-auto">
                               <div class="item-label">
                                 <i class="fab me-2"></i><strong>Categoria</strong>
                               </div>
                             </div>
                             <!--//col-->
                           </div>
                           <!--//row-->

                           <div class="col text-end">
                             <select id="categorias" name="CategoriaId" style="width: 200px;">

                               @{
                                 if(model.listaCategoria != undefined)
                                 {
                                   @model.listaCategoria.forEach(categoria => {

                                     if(categoria.CategoriaId == model.receita.CategoriaId)
                                     {
                                       <option value="@categoria.CategoriaId" selected>@categoria.Categoria</option>
                                     }
                                     else
                                     {
                                       <option value="@categoria.CategoriaId">@categoria.Categoria</option>
                                     }
                                   });
                                 }
                               }

                             </select>
                           </div>
                           <!--//col-->
                         </div>
                         <!--//item-->

                         <button type="submit" class="btn-sm app-btn-secondary">
                           Atualizar
                         </button>

                       </form>
                       &nbsp
                     </div>
                     <!--//app-card-body-->
